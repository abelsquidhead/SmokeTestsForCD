@model MercuryHealth.Models.MyMetricsViewModel

@{
    ViewBag.Title = "Calculate";
}

<h2>Calculate</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>My Metrics</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.MemberProfile.Birthdate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MemberProfile.Birthdate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberProfile.Birthdate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MemberProfile.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.MemberProfile.Gender, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MemberProfile.Gender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MemberProfile.Bio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MemberProfile.Bio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberProfile.Bio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MemberProfile.WeightInKilograms, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MemberProfile.WeightInKilograms, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberProfile.WeightInKilograms, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MemberProfile.HeightInCentimeters, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MemberProfile.HeightInCentimeters, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberProfile.HeightInCentimeters, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr/>

        <div class="form-group">
            @Html.LabelFor(model => model.BmrCalculatorOption, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.BmrCalculatorOption, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BmrCalculatorOption, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <p>Basal Metabolic Rate (BMR) is the amount of energy expressed in calories that a person needs to keep the body functioning at rest.</p>
        <p>Some of those processes are breathing, blood circulation, controlling body temperature, cell growth, brain and nerve function, and contraction of muscles. Basal metabolic rate (BMR) affects the rate that a person burns calories and ultimately whether you maintain, gain, or lose weight. Your basal metabolic rate accounts for about 60 to 75% of the calories you burn every day.</p>

        <div class="form-group">
            @Html.LabelFor(model => model.Bmr, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Bmr, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Refresh" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
